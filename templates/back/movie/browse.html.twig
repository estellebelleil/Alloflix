{% extends 'base.html.twig' %}

{% block title %}Movies{% endblock %}

{% block main %}
<h1>Movie list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ReleaseDate</th>
                <th>Type</th>
                <th>Duration</th>
                <th>Summary</th>
                <th>Synopsis</th>
                <th>Poster</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ movie.type }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.summary }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>{{ movie.poster }}</td>
                <td>{{ movie.rating }}</td>
                <td>
                    <a href="{{ path('show_movie', {id : movie.id})}}">show</a>
                    <a href="{{ path('edit_movie', {id : movie.id})}}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('create_movie')}}">Create new</a>
{% endblock %}
